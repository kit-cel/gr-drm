<?xml version="1.0"?>
<block>
  <name>DRM QAM Mapping</name>
  <key>drm_qam_map_bc</key>
  <category>DRM</category>
  <import>import drm</import>
  <make>drm.qam_map_bc($map_table, $bits_per_symbol, $vlen_out, $n_inputs)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Mapping table</name>
    <key>map_table</key>
    <type>raw</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Bits per symbol</name>
    <key>bits_per_symbol</key>
    <type>int</type>
  </param>
  <param>
    <name>Output vector length</name>
    <key>vlen_out</key>
    <type>int</type>
    <hide>part</hide>
  </param>
  <param>
    <name>Input ports</name>
    <key>n_inputs</key>
    <type>int</type>
    <hide>part</hide>
  </param>
  
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
    <nports>$n_inputs</nports>	
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
